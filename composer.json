{
    "name": "victorstack-ai/drupal-12-readiness-cli",
    "description": "A CLI tool to check Drupal projects for Drupal 12 readiness.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "VictorStack AI",
            "email": "victor@victorstack.ai"
        }
    ],
    "require": {
        "php": ">=8.1",
        "phpstan/phpstan": "^1.12",
        "mglaman/phpstan-drupal": "^1.3",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "drupal/core": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Drupal12Readiness\\": "src/"
        }
    },
    "bin": [
        "bin/drupal-12-readiness"
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
